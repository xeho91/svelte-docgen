{
	"name": "workspace",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"packageManager": "pnpm@9.15.0+sha512.76e2379760a4328ec4415815bcd6628dee727af3779aaa4c914e3944156c4299921a89f976381ee107d41f12cfa4b66681ca9c718f0668fa0831ed4c6d8ba56c",
	"scripts": {
		"build:doc": "typedoc",
		"changelog": "pnpm changeset add",
		"clean": "pnpm run \"/^clean:.*/\"; rm -rf \"./**/node_modules\" ",
		"clean:cache": "rm -rf \"./node_modules/.cache\" \"./.turbo\" ",
		"clean:docs": "rm -rf \"./docs\" ",
		"clean:test": "rm -rf \"./coverage\" ",
		"dev": "pnpm run \"/^(doc:watch|dev:watch)/\" ",
		"format": "prettier . --write && eslint . --fix",
		"lint": "prettier --check . && eslint .",
		"check": "turbo run check",
		"serve:doc": "serve \"./docs\" ",
		"typos": "typos --verbose",
		"typos:fix": "typos --verbose --write-changes",
		"dev:test": "pnpm vitest watch --passWithNoTests --typecheck --ui",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"_ci:test": "vitest run --coverage.enabled --coverage.provider=v8 --coverage.reporter=json-summary --coverage.reporter=json",
		"_ci:publish": "pnpm changeset publish",
		"_ci:version": "pnpm changeset version && pnpm fix:format"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.10",
		"@eslint/compat": "^1.2.4",
		"@types/node": "22.10.1",
		"@vitest/coverage-v8": "2.1.8",
		"@vitest/ui": "2.1.8",
		"all-contributors-cli": "6.26.1",
		"eslint": "^9.17.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"serve": "14.2.4",
		"svelte": "catalog:",
		"svelte-check": "4.1.1",
		"turbo": "2.3.3",
		"typedoc": "0.27.4",
		"typedoc-plugin-coverage": "3.4.0",
		"typedoc-plugin-mdn-links": "4.0.4",
		"typescript": "catalog:",
		"typescript-eslint": "^8.18.0",
		"vite": "catalog:",
		"vitest": "2.1.8"
	}
}
